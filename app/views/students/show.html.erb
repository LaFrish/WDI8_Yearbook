#studentShow body{
  text-align: center;
  line-height: normal;
  margin: auto;
}
#studentShow .topContainer {
  background : white;
  text-align: center;
  border-style : Solid;
  border-color : #000000;
  border-width : 1px;
  left : 294px;
  top : 500px;
  width : 1000px;
  height : 600px;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  margin-top: 200px;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 0 0 5px #222;
  margin: auto;
}

#studentShow .row{
  background : white;
  border-style : Solid;
  border-color : #000000;
  border-width : 1px;
  position : absolute ;
  left : 294px;
  top : 22px;
  width : 1000px;
  height : 600px;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  margin-top: 200px;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 0 0 5px #222;
  height : 35px;
  z-index: 1;
}

#studentShow .photoGallery{
  border-style : Solid;
  border-color : #000000;
  border-width : 1px;
  left : 294px;
  top : 800px;
  width : 1000px;
  height : 600px;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 0 0 5px #222;
  margin: auto;
}
#studentShow .commentGallery{
  border-style : Solid;
  border-color : #000000;
  border-width : 1px;
  left : 294px;
  width : 1000px;
  height : 600px;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 0 0 5px #222;
  margin: auto;
}

#studentShow .profileImg{
  height: 200px;
  width: 200px;
  border-radius: 50%;
  border: 4px solid white;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.2);
  margin: 25px;
  flex: 0 1 calc(20% - 50px);
  min-width:140px;
  overflow:hidden;
  position: relative;
  cursor: pointer;
}

#studentShow img{
  text-align: center;
}
</style>


<div id="studentShow">
      <div class="button"><%= link_to "Edit Student", edit_student_path(@student)%></h2></div>
  <section>
    <div class="profileImg">
      <%= image_tag @student.img_url %>
    </div>
    <div class="topContainer">
    <%= @student.quote %></br>
    <%= @student.q1 %></br>
    <%= @student.q2 %></br>
    <%= @student.q3 %></br>
    <%= @student.q4 %></br>
    <%=link_to @student.squad_id %></br>
    <%=link_to @student.codey_id %></br>
<div class="button_container">
  <%= link_to @student.github_url, class: 'btn btn-primary btn-lg' do %>
  <i class="fa fa-github"></i>
  Github
  <% end %>
  <%= link_to @student.portfolio_url, class: 'btn btn-primary btn-lg' do %>
  <i class="fa-file-text-o"></i>
  Portfolio
  <% end %>
  <%=link_to @student.project1_url, class: 'btn btn-primary btn-lg' do %>
  <i class="fa fa-meh-o"></i>
  Github
  <% end %>
  <%=link_to @student.project2_url, class: 'btn btn-primary btn-lg' do %>
  <i class="fa fa-code-fork"></i>
  Github
  <% end %>
  <%=link_to @student.project3_url, class: 'btn btn-primary btn-lg' do %>
  <i class="fa fa-github"></i>
  Github
  <% end %>
  <%=link_to @student.project4_url, class: 'btn btn-primary btn-lg' do %>
  <i class="fa fa-github"></i>
  Github
  <% end %>
  <%=link_to @student.email, class: 'btn btn-primary btn-lg' do %>
  <i class="fa fa-envelope"></i>
  Email
  <% end %>
  </br>
  <%=link_to @student.fb, class: 'btn btn-primary btn-lg' do %>
  <i class="fa fa-facebook"></i>
  Facebook
  <% end %>
    <%=link_to @student.linkedin, class: 'btn btn-primary btn-lg' do %>
  <i class="fa fa-linkedin"></i>
  LinkedIn
  <% end %>
  </div>
  </div>
  </section>

<section id="photo">
  <div class="photoGallery">
    <h2>pics</h2>
    <% @student.photos.each do |photo| %>
    <%= image_tag photo.url %>
    <% end %>
  </div>
</section>

  <section id="comment">
    <div class="commentGallery">
      <div class="overlay">
        <h2>keep in touch...</h2>

<% if current_user %>
<button> <%= link_to "Add new comment", new_student_comment_path(@student) %></button>
<% end %>
<% @student.comments.each do |comment| %>
  <p>
    <%= comment.body %>
  </p>
  <% if current_user && current_user == comment.user %>
<button>  <%= link_to "Edit", edit_student_comment_path(@student) %> </button>
<button>  <%= link_to "Delete", student_comment_path(@student), method: :delete %></button>
  <% end %>
</div>
<% end %>

</div>
</section>

</div>

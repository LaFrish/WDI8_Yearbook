<style>
#form {
  margin-top: 400px;
  height: 1000px;
}

#form .fill{
  height: 800px;
  width: 600px;
  background: red;
  color: #000;
}
</style>
<section class="form">
  <%= form_for @photo do |f| %>
  <div class="row text-center">
    <div class="large-10 large-centered columns">
      <div class="fill">
        <div class="input">
          <%=f.label :img_url, "Photo URL" %>
          <%=f.text_field :img_url %>
        </div>
        <div class="input">
          <%=f.label :caption, "Caption" %>
          <%=f.text_field :caption%>
        </div>
        <div class="input">
        <%=f.label :all_tags,"Tags", placeholder: "Separated with commas" %>
        <%= f.text_field :all_tags %>
      </div>
      <%=f.submit%>
      <% end %>
    </div>
  </div>
</section>

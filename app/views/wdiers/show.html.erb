<section id="wdierShow">
  <div class="wrapper">
    <div class="profileImg"><%= image_tag @wdier.img_url %>
    </div>
    <div class="box">
      <div class="cover-pic">

      <div class="profile-name">
        <h1 class="page-header"><%= @wdier.name %></h1>
      </div>
      </div>
      <div class="topContainer">
        <ul class="grid">
          <%= @wdier.github_url %></br>
          <%= @wdier.portfolio_url %></br>
          <%= @wdier.quote %></br>
          <%= @wdier.squad_name %></br>
          <%= @wdier.teaching %></br>
          <%= @wdier.memory %></br>
          <%= @wdier.favlang %></br>
          <%= @wdier.wisewords %></br>
          <%= @wdier.tag_list %></br>
          <%= @wdier.q1 %></br>
          <%= @wdier.q2 %></br>
          <%= @wdier.q3 %></br>
          <%= @wdier.fb %></br>
          <%= @wdier.linkedin %></br>
          <%= @wdier.squad_id %></br>
          <%= @wdier.student_id %></br>
          <%= @wdier.instructor_id %></br>
          <%= @wdier.codey_id %></br>
          <%= @wdier.role %></br>
        </ul>
        <button><%= link_to "edit", edit_wdier_path(@wdier)%></button>
      </br>
      <div class="projectGallery">
        <ul class="grid">
          <h1> Project Gallery </h1>
          <li><%= @wdier.project1_url %></li>
          <li><%= @wdier.project2_url %></li>
          <li><%= @wdier.project3_url %></li>
        </ul>
    </div>
    <div class="photo">
      <div class="photoGallery">
        <h1>Pics Please</h1>
        <button> <%= link_to "Add new photo", new_photo_path(@wdier) %> </button>
        <ul>
          <li class="col-lg-3 col-md-4 col-sm-6 col-xs-12"><% @wdier.photos.each do |photo| %>
            <%= image_tag photo.img_url %></li>
            <% end %>
          </ul>
        </div>
        </div>


        <div class="comment">
          <div class="commentGallery">
            <div class="overlay">
              <h1>keep in touch...</h1>


              <button><%= link_to "Add new comment", new_wdier_post_path(@wdier) %></button>
              <% @wdier.posts.each do |post| %>
              <%= post.name %>
              <%= post.body %>
            </p>
            <% if current_user && current_user == post.user %>
            <%= link_to "Edit", edit_wdier_post_path(@wdier) %> |
            <%= link_to "Delete", wdier_post_path(@wdier), method: :delete %>
            <% end %>
          </div>
          <% end %>
          </div>
        </div>
        <footer>
        </br>
        </footer>
      </div>
    </section>

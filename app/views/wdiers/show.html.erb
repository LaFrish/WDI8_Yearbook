  text-align: center;
  margin: 25px;
  box-shadow: 0 0 5px 0 #222;
  cursor: pointer;
}

#wdierShow h1{
  margin: 25px 25px 25px 25px;
}
#wdierShow .grid{
  text-align: left;
  margin: 25px 50px 25px 25px;
}
#wdierShow footer{
  background-color: #fff;
  line-height: 50px;
  text-align: left;
  margin: 25px 50px 25px 25px;
}


</style>

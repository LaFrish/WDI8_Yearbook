<section id="wdierShow">
  <div class="wrapper">
    <div class="profileImg"><%= image_tag @wdier.img_url %>
    </div>
    <div class="box">
      <div class="cover-pic">
        <div class="profile-name">
          <h1 class="page-header"><%= @wdier.name %></h1>
        </div>
      </div>
      <div class="quote">
        <%= @wdier.quote %></br>
      </div>
      <div class="socialContainer">
        <ul class="grid">
          <%= link_to @wdier.github_url, class: 'btn btn-primary btn-lg' do %>
          <i class="fa fa-github"></i>
          Github
          <% end %>
          <%= link_to @wdier.portfolio_url, class: 'btn btn-primary btn-lg' do %>
          <i class="fa-file-text-o"></i>
          Portfolio
          <% end %>
        <%=link_to @wdier.fb, class: 'btn btn-primary btn-lg' do %>
        <i class="fa fa-facebook"></i>
        Facebook
        <% end %>
        <%=link_to @wdier.linkedin, class: 'btn btn-primary btn-lg' do %>
        <i class="fa fa-linkedin"></i>
        LinkedIn
        <% end %>
      </ul>
    </div>
    <div class="topContainer">
      <ul class="grid">


        <%= @wdier.squad_name %></br>
        <%= @wdier.teaching %></br>
        <%= @wdier.memory %></br>
        <%= @wdier.favlang %></br>
        <%= @wdier.wisewords %></br>
        <%= @wdier.tag_list %></br>
        <%= @wdier.q1 %></br>
        <%= @wdier.q2 %></br>
        <%= @wdier.q3 %></br>
        <%= @wdier.squad_id %></br>
        <%= @wdier.student_id %></br>
        <%= @wdier.instructor_id %></br>
        <%= @wdier.codey_id %></br>
        <%= @wdier.role %></br>
      </ul>
      <%= link_to "edit", edit_wdier_path(@wdier)%>
    </br>
    <div class="projectGallery">
      <h1> Project Gallery </h1>
      <%=link_to image_tag("red-cog.png"), @wdier.project1_url%>
      <%=link_to image_tag("red-cog.png"), @wdier.project2_url%>
      <%=link_to image_tag("red-cog.png"), @wdier.project3_url%>
    </div>
    <div class="squadGallery">
      <ul class="grid">
        <div class="index">
          <h2> <%= @wdier.squad_name %></h2>

        </ul>
      </div>
    </div>

    <div class="photo">
      <div class="photoGallery">
        <h1>Pics Please</h1>
        <button><%= link_to "Add new photo", new_photo_path(@wdier) %></button>
        <ul>
          <li class="col-lg-3 col-md-4 col-sm-6 col-xs-12"><% @wdier.photos.each do |photo| %>
            <%= image_tag photo.img_url %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="comment">
        <div class="commentGallery">
          <div class="overlay">
            <h1>keep in touch...</h1>
            <button><%= link_to "Add new comment", new_wdier_post_path(@wdier) %> </button>
            <% @wdier.posts.each do |post| %>
            <div class="name">
              <%= post.name %>
            </div>
            <div class="body">
              <%= post.body %>
            </div>
            <%= link_to "Add new comment", new_wdier_post_path(@wdier) %>
            <% end %>
            <% if current_user && current_user == post.user %>
            <%= link_to "Edit", edit_wdier_post_path(@wdier) %> |
            <%= link_to "Delete", wdier_post_path(@wdier), method: :delete %>
            <% end %>
          </div>
        </div>
      </div>
      <footer>
      </br>
    </footer>
  </div>
</div>
</section>

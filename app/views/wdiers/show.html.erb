<style>

#wdierShow .topContainer {
  overflow: hidden;
  margin: 50px 100px 100px 50px;
}

#wdierShow .row{
  background : white;
  border-style : Solid;
  border-color : #000000;
  border-width : 1px;
  position : absolute ;
  left : 294px;
  top : 22px;
  width : 1000px;
  height : 600px;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  margin-top: 200px;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 0 0 5px #222;
  height : 35px;
  z-index: 1;
}

#wdierShow .studentGallery{
  margin: 50px 100px 100px 50px;
  overflow: hidden;
}
#wdierShow .photoGallery{
  margin: 50px 100px 100px 50px;
  overflow: hidden;
}

#wdierShow .photoGallery img {
width: 300px;
height: 200px;
border-color: 1px black;
box-shadow: 0 0 5px 0 #222;
}

#wdierShow .commentGallery{
  margin: 50px 100px 100px 50px;
  overflow: hidden;
}
#wdierShow projectGallery{
  margin: 50px 100px 100px 50px;
  overflow: hidden;
}
#wdierShow html {
  color: #222;
  font-family: monospace, sans-serif;
  font-size: 12px;
  -webkit-font-smoothing: antialiased;
  font-style, font-weight, letter-spacing, line-height, word-spacing: normal;
}

#wdierShow body {
  width: 100%;
  height: 100%;
  text-align: center;
}

#wdierShow .wrapper {
  width: 1200px;
  height: 100%;
  position: relative;
  top: 25%;
  /*   left: 50%;  */
  margin: 100px 100px;
}

#wdierShow .box{
  position:relative;
  margin: 160px auto;
  width: 1200px;
  height: 100%;
  background: #fff;
  border: 1px solid #bbb;
  border-radius: 8px;
  overflow: hidden;
  z-index:-1;
  box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
}
}

#wdierShow .cover-pic {
  width: 1200px;
  height: 300px;
  background: url() 0 -10px;
  background-size: 100%;
}

#wdierShow .profile-name {
  margin-top: 250px;
  position: relative;
  top: -50px;
  color: #fff;
  text-decoration:none;
  font-size: 1.4rem;
  font-weight: 500;
  letter-spacing: 0.1rem;
  text-align: center;
  text-shadow: 0 0 5px #000;
  line-height: 30px;
}
#wdierShow .profileImg{
  margin: auto;
  margin-bottom: -300px;
  height: 300px;
  width: 300px;
  /*position : absolute ;*/
  left : 550px;
  border:  solid #222;
  border-radius: 100%;
  box-shadow: 0 0 20px 0 #222;
  /*min-width:140px;*/
  overflow:hidden;
  cursor: pointer;
  /*float: left;*/
  z-index: 1;
  -webkit-animation: index imgSlideIn .65s .15s ease forwards;
  animation: index imgSlideIn .65s .15s ease forwards;
}

#wdierShow .profile-pic img{
  position: relative;
  z-index: 1;
  /*margin-left:auto;
  margin-right:auto;*/
  margin-bottom: -325px;
  width: 300px;
  height:300px;
  border:  solid #222;
  border-radius: 100%;
  box-shadow: 0 0 20px 0 #222;
  cursor: pointer;
}

#wdierShow .profileImg:before {
  content: "";
  position: absolute;
  margin-left: 600px;
  margin-right: 600px;
  width: 120px;
  height: 120px;

  background: -webkit-linear-gradient(-45deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 55%);
  background: -moz-linear-gradient(-45deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 55%);
  background: -ms-linear-gradient(-45deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 55%);
  background: -o-linear-gradient(-45deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 55%);
  background: linear-gradient(-45deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 55%);

  -webkit-border-radius: 100%;
  -moz-border-radius: 100%;
  -ms-border-radius: 100%;
  -o-border-radius: 100%;
  border-radius: 100%;
}

#wdierShow .profile-pic:hover {
  ;
}
